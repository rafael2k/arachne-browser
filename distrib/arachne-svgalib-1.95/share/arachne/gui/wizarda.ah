<TD><INPUT TYPE=TEXT Name="SMTPserver" ARACHNECFGVALUE=SMTPserver SIZE=36>
</TABLE>
<INPUT TYPE=HIDDEN NAME="MailBodyEncoding" VALUE="7bit">
<INPUT TYPE=HIDDEN NAME="MyCharset" VALUE="US-ASCII">
